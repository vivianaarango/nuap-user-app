                            HeightRequest="40"
                            TextColor="#64a2e5"
                            BorderRadius="12"
                            FontSize="14">
                        </Button>
                        <Button
                            Command="{Binding GetInitiatedCommand}"
                            Text="Iniciadas"
                            FontFamily="Poppins-Bold"
                            TextTransform="None"
                            BackgroundColor="#cdeefb"
                            HeightRequest="40"
                            TextColor="#64a2e5"
                            BorderRadius="12"
                            FontSize="14">
                        </Button>
                        <Button
