                                                TextTransform="None"
                                                BackgroundColor="{Binding StatusColor}"
                                                HeightRequest="40"
                                                TextColor="#414b5a"
                                                BorderRadius="12"
                                                FontSize="14">
                                            </Button>
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
