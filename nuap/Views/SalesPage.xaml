                        <DataTemplate>
                            <ViewCell>
                                <Frame
                                    CornerRadius="15"
                                    HasShadow="false"
                                    Margin="15,8,15,0">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SalesDetailCommand}"/>
                                    </Frame.GestureRecognizers>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackLayout 
                                            Padding="5,0,5,0"
                                            Grid.Column="1"
                                            HorizontalOptions="Start"
                                            VerticalOptions="Center">
                                            <Label 
                                                VerticalOptions="Center"
                                                HorizontalOptions="StartAndExpand"
                                                FontFamily="Poppins-Bold"
                                                FontSize="18" 
                                                Text="{Binding Id}"
                                                TextColor="#8c8c8c">
                                            </Label>
                                            <Label 
                                                VerticalOptions="Center"
                                                HorizontalOptions="StartAndExpand"
                                                FontFamily="Poppins"
                                                FontSize="16" 
                                                Text="{Binding Total}"
                                                TextColor="#c3c3c3">
                                            </Label>
                                        </StackLayout>
                                        <StackLayout 
                                            Grid.Column="2"
                                            Padding="10,0,0,0"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center">
